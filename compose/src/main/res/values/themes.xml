<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.IDNApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryVariant">#ffffff</item>
        <item name="colorOnPrimary">#14171a</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.IDNApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IDNApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IDNApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>